generator client {
    provider ="prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id String @id @default(uuid())
    name String
    email String @unique
    password String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    tasks Task[]
}

enum TaskStatusEnum {
    todo
    ongoing
    completed
    cancelled

}

model Task {
  id String @id @default(uuid())
  title String
  user User @relation(fields: [userId],references:[id])
  userId String
  description String
  status TaskStatusEnum @default(todo)
  startDate DateTime?
  endDate DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}